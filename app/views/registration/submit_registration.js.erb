<% if @invalid_data.size == 0 %>
  $('#register').html('');
  $('#confirmation').css('display','block');
<% else %>
  $('#register_button').prop('disabled', false).removeClass('disabled');
  <% if @invalid_data['server'] %>
    $('#server_error').css('display', 'block');
  <% else %>
    $('#data_error').css('display', 'block');
    <% @invalid_data.each do |k,v| %>
      $('#<%= k %>').css('border', '2px solid red');
    <% end %>
  <% end %>
<% end %>
