<tr class="item" data-record_id="<%= i.id %>">
  <td>
    <%= icon('fas', item_format_icon(i.type_of_resource)) %>
  </td>
  <td>
    <a href="details?id=<%= i.id %>" onclick="item_details(<%= i.id %>)" class="item_details_link">
      <%= i.title %>
    </a>
