<h3>Fines</h3>
<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr>
        <th scope="col">Title</th>
        <th scope="col">Author</th>
        <th scope="col">Checkout / Last Renewal Date</th>
        <th scope="col">Due Date</th>
        <th scope="col">Return Date</th>
        <th scope="col">Current Fine</th>
      </tr>
    </thead>
    <tbody>
      <% fines.each do |fine| %>
        <tr>
          <td><%= fine[:title] %></td>
          <td><%= fine[:author] %></td>
          <td><%= fine[:checkout_date] %></td>
          <td><%= fine[:due_date] %></td>
          <td><%= fine[:return_date] %></td>
          <td><%= fine[:balance_owed] %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
