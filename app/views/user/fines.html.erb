<% if cookies[:user].present? %>
  <% @userdetails = JSON.parse(cookies[:user]) %>
  <div class="row">
    <div id="account-menu" class="col-12 col-md-3 mt-3">
      <%= render 'account_menu' %>
    </div>
    <div id="account-fines" class="col-12 col-md-9 mt-3">
      <% if (@fines['fines'].length > 0) || (@fines['fees'].length > 0) %>
        <% if @fines['fines'].length > 0 %>
          <%= render 'fines_list', fines: @fines['fines'] %>
        <% end %>
        <% if @fines['fees'].length > 0 %>
          <%= render 'fees_list', fees: @fines['fees'] %>
        <% end %>
      <% else %>
        <h1>No fines on your account. Hooray!</h1>
      <% end %>
    </div>
  </div>
<% else %>
  <h1>Not logged in</h1>
<% end %>
