<div class="row">
  <div id="account-menu" class="d-none d-lg-inline-block col-12 col-lg-3 mt-3">
    <%= render 'account_menu' %>
  </div>
  <div class="col-12 col-lg-9 mt-3">
    <h2 class="bg-primary text-light d-inline-block d-lg-none w-100 p-2">Checkout History</h2>
    <div id="checkout-history">
      <% @checkouts.each do |i| %>
        <%= render "list_item", i: i %>
      <% end %>
    </div>
    <div id="more-checkouts">
      <% if @more_results.to_s == "true" %>
        <% next_page = @page.to_i + 1 %>
        <%= render "more_checkouts", checkouts: @checkouts, page: next_page %>
      <% end %>
    </div>
  </div>
</div>
