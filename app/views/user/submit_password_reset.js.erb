<% if @message == 'complete' %>
    $('#password_reset_form').html('');
    $('#confirmation').css('display','block');
<% else %>
  $('#reset_password_button').attr('disabled', false).removeClass('disabled');
  <% if @message[:error] == 'did not pass a username or card #' %>
    $('#card_or_username').css('border', '2px solid red');
    $('#reset_errors').html('Please enter a username or card #');
  <% else %>
    $('#reset_errors').html('Something went wrong. Pleae contact your local library or try again later.');
  <% end %>
<% end %>
